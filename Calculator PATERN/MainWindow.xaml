<Window x:Class="Calculator_PATERN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator_PATERN"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="250" 
        Width="300"
        MaxHeight="250"
        MaxWidth="300">
    <Grid>
        <StackPanel Width="200" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Калькулятор"/>
            <TextBlock Text="A"/>
            <TextBox x:Name="TextBoxA"/>
            <TextBlock Text="B"/>
            <TextBox x:Name="TextBoxB"/>
            <TextBlock Text="Сумма"/>
            <Button Content="Рассчитать" Click="Button_Click_Sum"/>
            <TextBlock Text="Результат"/>
            <TextBox x:Name="TextBoxSum"/>

        </StackPanel>
        

    </Grid>
</Window>
